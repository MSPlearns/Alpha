@{
	ViewData["Title"] = "Sign Up";
	Layout = "_CleanLayout";
}

<section id="signup" class="auth-form">

    <div class="card">
        <div class="card-header">
            <h1>Create account</h1>
        </div>

        <div class="card-body">
            <form method="post" asp-controller="" asp-action="" novalidate>

                <button class="btn-external">
                    <i class="fa-brands fa-google "></i>
                    <span>
                        Sign Up with Google
                    </span>
                </button>
            </form>
            <div class="divider"><span>or</span></div>
            <form method="post" asp-controller="" asp-action="" novalidate>

                <div class="form-group">
                    <label  class="form-label">First Name</label>
                    <div class=" field-group">
                        <input class="form-control" type="text"
                               value="@Model?.FirstName">
                        <span  class="field-validation-error"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label  class="form-label">Last Name</label>
                    <div class=" field-group">
                        <input  class="form-control" type="text" value="@Model?.LastName">
                        <span  class="field-validation-error"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Email</label>
                    <div class=" field-group">
                        <input  class="form-control" type="email" value="@Model?.Email">
                        <span  class="field-validation-error"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label  class="form-label">Password</label>
                    <div class=" field-group">
                        <input  class="form-control" type="password" value="">
                        <span  class="field-validation-error"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label  class="form-label">Confirm Password</label>
                    <div class=" field-group">
                        <input class="form-control" type="password"
                               value="">
                        <span  class="field-validation-error"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class=" field-group">
                        <input  class="form-checkbox" type="checkbox">
                        <span>
                            I accept the <a href="">
                                Terms &
                                Conditions
                            </a>
                        </span>
                        <span  class="field-validation-error"></span>
                    </div>
                </div>

                <button class="btn" type="submit">Create account</button>



            </form>
        </div>
        <div class="card-footer">Already have an account? <a href="@Url.Content("~/Auth/SignIn")">Log in</a></div>
    </div>
</section>
