@{
	Layout = "_CleanLayout";
    ViewData["Title"] = "Sign In";
}
<section id="signin" class="auth-form">
    <div class="card">
        <div class="card-header">
            <h1>Login</h1>
        </div>

        <div class="card-body">
            <form method="post" asp-controller="" asp-action="" novalidate>

                <button class="btn-external">
                    <i class="fa-brands fa-google "></i>
                    <span>
                        Log in with Google
                    </span>
                </button>
            </form>
            <div class="divider"><span>or</span></div>
            <form method="post" asp-controller="" asp-action="" novalidate>


                <div class="form-group">
                    <label  class="form-label">Email</label>
                    <div class=" field-group">
                        <input  class="form-control" type="email" value="@Model?.Email">
                        <span  class="field-validation-error"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Password</label>
                    <div class=" field-group">
                        <input class="form-control" type="password" value="@Model?.Password">
                        <span  class="field-validation-error"></span>
                    </div>
                </div>


                <div class="form-group">
                    <div class=" field-group">
                        <input class="form-checkbox" type="checkbox">
                        <span>Remember me</span>
                        <span  class="field-validation-error"></span>
                    </div>
                </div>

                <button class="btn" type="submit">Log in</button>
            </form>
        </div>
        <div class="card-footer">Don't have an account? <a href="@Url.Content("~/Auth/SignUp")">Sign Up</a></div>
    </div>
</section>