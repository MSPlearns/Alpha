<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script type="importmap"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.snow.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.js"></script>
    <link rel="stylesheet" href="https://kit.fontawesome.com/a576612222.css" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" href="~/images/AlphaIcon.ico" type="image/x-icon">
    <title>@ViewData["Title"] - Alpha Portal</title>
</head>
<body>
    <div class="backoffice-wrapper">
        <aside id="sidebar">
            @* section alpha logotype *@
            @* NavLink *@
        </aside>

        <main>
            <header id="header" class="top">
                @* SearchBar *@
                <div id="notification-container">
                    <button type="button" data-type="dropdown" data-target="#notification-dropdown"
                            class="btn-notifications">
                        <i class="dot dot-red fa-solid fa-circle show"></i>
                        <i class="fa-duotone fa-solid fa-bell"
                           style="--fa-primary-opacity: 0.4; --fa-secondary-opacity: 1;"></i>
                    </button>


                    <div id="notification-dropdown" class="dropdown">
                        <div class="dropdown-header">
                            <h4>Notifications</h4>
                            <div class="badge badge-red">
                                <span id="notification counter">99+</span>
                            </div>
                        </div>
                        <div class="divider"></div>
                        <div class="dropdown-body">
                            <a class="notification-item" href="#">
                                <img class="round-image img-size-48" src="images/users/user-template.svg"
                                     alt="template avatar">
                                <div class="notification-text">
                                    <span>Rodrigo Perez</span>
                                    <span>added</span>
                                </div>
                                <div class="notification-time-text">1 min ago</div>
                                <button class="btn-close"></button>
                            </a>
                            <a class="notification-item" href="#">
                                <img class="square-image img-size-48"
                                     src="images/projects/project-avatar-placeholder.svg" alt="template avatar">
                                <div class="notification-text">
                                    <span>Proyecto Hombre</span>
                                    <span>updated</span>
                                </div>
                                <div class="notification-time-text">1 min ago</div>
                                <button class="btn-close"></button>
                            </a>
                            <a class="notification-item" href="#">
                                <img class="round-image img-size-48" src="images/users/user-template.svg"
                                     alt="template avatar">
                                <div class="notification-text">
                                    <span>Rodrigo Perez</span>
                                    <span>added</span>
                                </div>
                                <div class="notification-time-text">1 min ago</div>
                                <button class="btn-close"></button>
                            </a>
                        </div>
                    </div>
                </div>

                <div id="account-container">
                    <button type="button" data-type="dropdown" data-target="#account-dropdown" class="btn-account"
                            data-type="dropdown">
                        <img class="round-image" src="images/users/user-template.svg" alt="template avatar">
                    </button>
                    <div id="account-dropdown" class="dropdown">
                        <div class="dropdown-header">
                            <div class="account-name">
                                <img class="round-image img-size-40" src="/Images/users/user-template.svg"
                                     alt="template avatar">
                                <span>Pepe Gonzalez</span>
                            </div>
                        </div>
                        <div class="dropdown-body">
                            <label class="switch-label">
                                <label for="darkModeToggle" class="dropdown-item">
                                    <i class="fa-duotone fa-solid fa-circle-half-stroke"></i>
                                    <span>Dark Mode</span>
                                </label>
                                <label class="switch">
                                    <input type="checkbox" id="darkModeToggle" data-type="toggle" data-func="darkmode">
                                    <span class="slider"></span>
                                </label>
                        </div>
                        <div class="divider"></div>
                        <a class="dropdown-item" href="#">
                            <i class="fa-duotone fa-solid fa-cog"></i>
                            <span>Settings</span>
                        </a>
                        <a class="dropdown-item" href="#">
                            <i class="fa-duotone fa-solid fa-right-from-bracket"></i>
                            <span>Logout</span>
                        </a>
                    </div>
                </div>

            </header>



        </main>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>