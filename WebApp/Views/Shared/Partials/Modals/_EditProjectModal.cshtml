@{
}
    <section id="edit-project-modal" class="modal">
        <div class="card">

            <div class="card-header">
                <h2>Edit Project</h2>
                <button class="btn-close" type="button" data-type="close" data-target="#edit-project-modal"></button>
            </div>

            <div class="card-body">
                <div class="avatar">
                    <img src="/Images/projects/project-avatar-placeholder.svg" class="square-image img-size-150" alt="">
                </div>

                <form asp-controller="" asp-action="" method="post" novalidate>
                    <div class="form-group">
                        <label class="form-label">Title</label>
                        <div class="field-group">
                            <input  class="form-control" type="text" value="">
                            <span  class="field-validation-error"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label  class="form-label">Client</label>
                        <div class=" field-group">
                            <div class="form-select" data-placeholder="Choose a client">
                                <button type="button" class="form-select-trigger">
                                    <span class="form-select-text"></span>
                                </button>
                                <ul class="form-select-options">
                                    <li class="form-select-option" data-value="">Option 1</li>
                                    <li class="form-select-option" data-value="">Option 2</li>
                                    <li class="form-select-option" data-value="">Option 3</li>
                                </ul>
                                <input type="hidden" name="client-select-value" value="" />
                            </div>
                            <span  class="field-validation-error"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label  class="form-label">Description</label>
                        <div class="field-group-quill">
                            <textarea id="edit-project-description-textarea" class="form-control"
                                value=""></textarea>
                            <div id="edit-project-description-wysiwyg-editor" class="wysiwyg-editor"></div>
                            <div id="edit-project-description-wysiwyg-toolbar" class="wysiwyg-toolbar">
                                <span class="ql-formats">
                                    <button class="ql-bold"></button>
                                    <button class="ql-italic"></button>
                                    <button class="ql-underline"></button>
                                </span>
                                <span class="ql-formats">
                                    <button class="ql-align" value=""></button>
                                    <button class="ql-align" value="center"></button>
                                    <button class="ql-align" value="right"></button>
                                </span>
                                <span class="ql-formats">
                                    <button class="ql-list" value="bullet"></button>
                                    <button class="ql-list" value="ordered"></button>
                                </span>
                                <span class="ql-formats">
                                    <button class="ql-link"></button>
                                </span>
                            </div>

                            <span class="field-validation-error"></span>
                        </div>
                    </div>
                    <div class="form-group horizontal">
                        <label  class="form-label">Start Date</label>
                        <label  class="form-label">End Date</label>

                        <div class="field-group datepicker-wrapper">
                            <input  class="form-control date-input" type="date"
                                value="">
                            <i class="fa-duotone fa-calendar calendar-icon"></i>
                            <span  class="field-validation-error hide"></span>
                        </div>

                        <div class="field-group datepicker-wrapper">
                            <input  class="form-control date-input" type="date"
                                value="">
                            <i class="fa-duotone fa-calendar calendar-icon"></i>
                            <span class="field-validation-error hide"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Project manager</label>
                        <div class="field-group">
                            <div class="form-select" data-placeholder="Choose a project manager">
                                <button type="button" class="form-select-trigger">
                                    <span class="form-select-text"></span>
                                </button>
                                <ul class="form-select-options">
                                    <li class="form-select-option" data-value="">Option 1</li>
                                    <li class="form-select-option" data-value="">Option 2</li>
                                    <li class="form-select-option" data-value="">Option 3</li>
                                </ul>
                                <input type="hidden" name="manager-select-value" />
                            </div>
                            <span class="field-validation-error"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label  class="form-label">Budget</label>
                        <div class="field-group budget">
                            <input  class="form-control" value="">
                            <span  class="field-validation-error"></span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </section>
