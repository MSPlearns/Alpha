@using Business.Models.Dtos
@using WebApp.Models
@model EditClientForm 

<div id="editClientModal" class="modal">
	<div class="modal-content">

		<div class="modal-header">
			<h3>Edit Client</h3>
			<button type="button" class="btn-close" data-close="true" modal-target="#editClientModal"></button>
		</div>

		<form novalidate method="post" asp-action="Edit" asp-controller="Client">

			<input asp-for="ClientId" readonly type="hidden" />

			<div class="image-previewer circle">
				<img src="" class="image-preview" />
				<input asp-for="ClientImage" accept="image/*" class="hide" />
			</div>

			<div class="form-group">
				<label asp-for="ClientName"></label>
				<div class="field-group">
					<input asp-for="ClientName" type="text" />
					<span asp-validation-for="ClientName" class="field-validation-error"></span>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="ClientEmail"></label>
				<div class="field-group">
					<input asp-for="ClientEmail" type="email" />
					<span asp-validation-for="ClientEmail" class="field-validation-error"></span>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="ClientPhone"></label>
				<div class="field-group">
					<input asp-for="ClientPhone" type="tel" />
					<span asp-validation-for="ClientPhone" class="field-validation-error"></span>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="ClientLocation"></label>
				<div class="field-group">
					<input asp-for="ClientLocation" type="text" />
					<span asp-validation-for="ClientLocation" class="field-validation-error"></span>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="ClientStatus">Status</label>
				<div class="field-group">
					<select asp-for="ClientStatus" class="form-control">
						<option value="0" selected disabled>--Select a status--</option>
						<option value="Active">Active</option>
						<option value="Inactive">Inactive</option>
						<option value="Blacklisted">Blacklisted</option>
					</select>
					<span asp-validation-for="ClientStatus" class="field-validation-error"></span>
				</div>
			</div>
			<button type="submit" class="btn btn-blue">Save</button>
		</form>
	</div>
</div> 