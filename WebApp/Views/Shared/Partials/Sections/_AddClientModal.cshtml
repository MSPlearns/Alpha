@* @using Business.Models.Dtos *@
@using WebApp.Models
@model AddClientViewModel

<div id="addClientModal" class="modal">
	<div class="modal-content">

		<div class="modal-header">
			<h3>Add Client</h3>
			<button type="button" class="btn-close" data-close="true" modal-target="#addClientModal"></button>
		</div>

		<form novalidate method="post" asp-action="AddClient" asp-controller="Admin">

			<div class="image-preview-container circle selected">
				<img src="" class="image-preview" />
				<input asp-for="FormData.ClientImage" accept="image/*" class="hide" />
			</div>

			<div class="form-group">
				<label asp-for="FormData.ClientName"></label>
				<div class="field-group">
					<input asp-for="FormData.ClientName" type="text" />
					<span asp-validation-for="FormData.ClientName" class="field-validation-error"></span>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="FormData.ClientEmail"></label>
				<div class="field-group">
					<input asp-for="FormData.ClientEmail" type="email" />
					<span asp-validation-for="FormData.ClientEmail" class="field-validation-error"></span>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="FormData.ClientPhone"></label>
				<div class="field-group">
					<input asp-for="FormData.ClientPhone" type="tel"  />
					<span asp-validation-for="FormData.ClientPhone" class="field-validation-error"></span>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="FormData.ClientLocation"></label>
				<div class="field-group">
					<input asp-for="FormData.ClientLocation" type="text"  />
					<span asp-validation-for="FormData.ClientLocation" class="field-validation-error"></span>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="FormData.ClientStatus">Status</label>
				<div class="field-group">
					<select asp-for="FormData.ClientStatus" class="form-control">
						<option value="0" selected disabled>--Select a status--</option>
						<option value="Active" >Active</option>
						<option value="Inactive">Inactive</option>
						<option value="Blacklisted">Blacklisted</option>
					</select>
					<span asp-validation-for="FormData.ClientStatus" class="field-validation-error"></span>
				</div>
			</div>
			<button type="submit" class="btn btn-blue">Save</button>
		</form>
	</div>
</div> 